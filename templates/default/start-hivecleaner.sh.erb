#!/usr/bin/env bash

PID_FILE=<%= node['hive2']['cleaner']['pid_file'] %>
if [ -f "$PID_FILE" ] ; then
 PID=$(cat "$PID_FILE")
 kill -0 "$PID" > /dev/null 2>&1
 if [ $? -eq 0 ] ; then
     echo "hiveCleaner is already running. Kill it first."
     exit 1
 fi
fi

nohup <%= node['hive2']['cleaner']['base_dir'] %>/hive_cleaner --connection <%= @mgmd_endpoint %> 2>&1 > <%= node['hive2']['cleaner']['base_dir'] %>/logs/hivecleaner.log &
echo $! > "$PID_FILE"
